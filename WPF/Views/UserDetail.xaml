<Window x:Class="WPF.UserDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Detail" Height="400" Width="600">
    <Grid Margin="20">
        <StackPanel>
            <!-- User Name -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Username:" VerticalAlignment="Center" Width="100" />
                <TextBlock Text="{Binding UserName}" Margin="5,0,0,0" />
            </StackPanel>

            <!-- Cart Items -->
            <ListBox ItemsSource="{Binding Cart}" DisplayMemberPath="ProductName" Height="200" Margin="0,0,0,10"/>

            <!-- Cart Total -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Cart Total:" VerticalAlignment="Center" Width="100" />
                <TextBlock Text="{Binding CartTotal}" Margin="5,0,0,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
