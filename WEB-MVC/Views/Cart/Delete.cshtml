@model WEB_MVC.Models.CartModel

<h2>Delete</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CartId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CartId)
        </dd>

        <dt>
            User
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.UserName) (ID: @Html.DisplayFor(model => model.UserId))
        </dd>

        <dt>
            Product
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.ProductName) (ID: @Html.DisplayFor(model => model.ProductId))
        </dd>
        <!-- Add other properties as needed -->
    </dl>

    @using (Html.BeginForm("Delete", "Cart", new { id = Model.CartId }))
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-default" />
    }

    @Html.ActionLink("Back to List", "Index")
</div>
